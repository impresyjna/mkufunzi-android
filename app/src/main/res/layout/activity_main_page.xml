<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.views_controllers.MainPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trening"
            android:id="@+id/training_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="trainingPageShow"
            android:layout_weight=".5"
            android:background="#16a085"
            android:layout_margin="@dimen/abc_button_inset_vertical_material" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kartoteka"
            android:id="@+id/cart_button"
            android:layout_below="@+id/training_button"
            android:onClick="cartPageShow"
            android:layout_weight=".5"
            android:background="#2980b9"
            android:layout_margin="@dimen/abc_button_inset_vertical_material" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wyloguj"
            android:id="@+id/logout_button"
            android:layout_centerVertical="true"
            android:onClick="logOut"
            android:layout_weight=".2"
            android:background="#c0392b"
            android:layout_margin="@dimen/abc_button_inset_vertical_material"/>
    </LinearLayout>
</RelativeLayout>
